<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CityActivity.PostActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"

        android:layout_marginEnd="@dimen/_6sdp"
        android:padding="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            >
            <ImageView
                android:id="@+id/image_from_gallery"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/gallery"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_8sdp"


                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edit_background"
                android:layout_weight="3">

                <ImageView
                    android:id="@+id/image_send_post"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_18sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_send_24"
                    android:rotation="210"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/_4sdp"

                    />

                <EditText
                    android:id="@+id/txt_write_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="12dp"
                    android:layout_marginEnd="@dimen/_8sdp"

                    android:layout_weight="4"
                    android:textSize="@dimen/_14ssp"
                    android:maxWidth="@dimen/_100sdp"

                    android:background="@android:color/transparent"

                    android:hint="عرف المحتوى"
                    tools:text=""


                    />
            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_User_send_Post"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_4sdp"

                android:background="@drawable/background_image"
                android:scaleType="centerCrop"
                app:riv_oval="true"

                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"

            >
            <ImageView
                android:id="@+id/image_for_post"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_height="@dimen/_100sdp"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@drawable/ic_launcher_background"
                android:layout_gravity="center"
                />


        </LinearLayout>







    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/postRc"
        android:layout_width="match_parent"
        tools:listitem="@layout/post_item"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_12sdp"

        />

    <ProgressBar
        android:id="@+id/progressbarPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_64sdp"


        />



</androidx.constraintlayout.widget.ConstraintLayout>