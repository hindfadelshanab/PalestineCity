<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <View
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:background="@drawable/profile_background"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_90sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_100sdp"

        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="4dp"
        app:civ_border_color="#FFF"
        app:civ_border_width="5dp"
        app:layout_constraintBottom_toTopOf="@id/linear"
        app:layout_constraintEnd_toEndOf="@id/linear"
        app:layout_constraintStart_toStartOf="@id/linear"
        app:layout_constraintTop_toTopOf="@id/linear"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="@id/linear"
        app:layout_constraintStart_toStartOf="@id/linear"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الاسم :"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"


            />
        <TextView
            android:id="@+id/txt_user_name_profile"
            android:layout_width="match_parent"
            android:background="@drawable/lable_background"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"

            android:padding="@dimen/_8sdp"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"

            app:layout_constraintEnd_toEndOf="@id/linear"
            app:layout_constraintStart_toStartOf="@id/linear"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            tools:text="هند ابوشنب"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الايميل :"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"


            />
        <TextView
            android:id="@+id/txt_user_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/linear"
            app:layout_constraintStart_toStartOf="@id/linear"
            app:layout_constraintTop_toBottomOf="@id/txt_user_name_profile"
            tools:text="هند ابوشنب"
            android:background="@drawable/lable_background"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"
            android:textAlignment="viewEnd"

            android:textColor="@color/black"
            android:padding="@dimen/_8sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المدينة :"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"


            />
        <TextView
            android:id="@+id/txt_user_city_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/linear"
            app:layout_constraintStart_toStartOf="@id/linear"
            app:layout_constraintTop_toBottomOf="@id/txt_user_name_profile"
            tools:text="هند ابوشنب"
            android:background="@drawable/lable_background"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"
            android:textAlignment="viewEnd"

            android:padding="@dimen/_8sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"

            />

        <TextView
            android:id="@+id/txt_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_logout"
            android:text="تسجيل الخروج"
            android:textSize="@dimen/_20ssp"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/_8sdp"

            android:layout_marginTop="@dimen/_24sdp"
            />
    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>