<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FEFEFE"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">


    <View
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/profile_background"


        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_18ssp"
        android:text="الملف الشخصي"
        app:layout_constraintTop_toTopOf="@id/linear"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/linear"
        app:layout_constraintEnd_toEndOf="@id/linear"

        app:layout_constraintBottom_toBottomOf="@id/linear"
        android:fontFamily="@font/cairo_regular"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_100sdp"

        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="4dp"
        app:civ_border_color="#FFF"
        app:civ_border_width="5dp"
        tools:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linear"
         />
    <TextView
        android:id="@+id/txt_user_name_profile"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_margin="@dimen/_8sdp"

        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_medium"

        android:padding="@dimen/_4sdp"
        app:layout_constraintEnd_toEndOf="@id/linear"
        app:layout_constraintStart_toStartOf="@id/linear"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        tools:text="هند ابوشنب"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="@id/linear"
        app:layout_constraintStart_toStartOf="@id/linear"
        app:layout_constraintTop_toBottomOf="@id/txt_user_name_profile"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الايميل :"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"


            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="#F5F5F5"
            android:layout_margin="@dimen/_4sdp"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardBackgroundColor="#F8F7F7"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            >
        <TextView
            android:id="@+id/txt_user_email_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/linear"
            app:layout_constraintStart_toStartOf="@id/linear"
            app:layout_constraintTop_toBottomOf="@id/txt_user_name_profile"
            tools:text="هند ابوشنب"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_margin="@dimen/_4sdp"
            android:fontFamily="@font/cairo_medium"
            android:textAlignment="viewEnd"

            android:textColor="@color/black"
            android:padding="@dimen/_4sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp"

            />
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المدينة :"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_gravity="end"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"


            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:background="#F5F5F5"
            app:cardCornerRadius="@dimen/_8sdp"
            app:cardBackgroundColor="#F8F7F7"
            android:layout_margin="@dimen/_4sdp"


            app:cardElevation="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_8sdp"
            >
        <TextView
            android:id="@+id/txt_user_city_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/linear"
            app:layout_constraintStart_toStartOf="@id/linear"
            app:layout_constraintTop_toBottomOf="@id/txt_user_name_profile"
            tools:text="هند ابوشنب"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_margin="@dimen/_4sdp"
            android:textAlignment="viewEnd"

            android:padding="@dimen/_4sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_16ssp"

            />
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/txt_sign_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:textColor="@color/white"
            android:drawableEnd="@drawable/ic_login"
            android:text="تسجيل الخروج"
            android:drawableTint="@color/white"
            android:paddingEnd="@dimen/_16sdp"
            android:background="@drawable/btn_background"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_16sdp"
            app:cornerRadius="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_24sdp"
            />
<!--        <TextView-->
<!--            android:id="@+id/txt_sign_out"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:drawableEnd="@drawable/ic_logout"-->
<!--            android:text="تسجيل الخروج"-->
<!--            android:textSize="@dimen/_20ssp"-->
<!--            android:background="ba"-->
<!--            android:textColor="@color/black"-->
<!--            android:drawablePadding="@dimen/_8sdp"-->

<!--            android:layout_marginTop="@dimen/_24sdp"-->
<!--            />-->
    </LinearLayout>









</androidx.constraintlayout.widget.ConstraintLayout>